<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="200" prefWidth="400" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controllers.AddDeviceComponentController">

    <VBox spacing="15" padding="20">
        <Label text="إضافة مكوّن للجهاز" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <ComboBox fx:id="itemComboBox" promptText="اختر الصنف" />

        <TextField fx:id="quantityField" promptText="أدخل الكمية" />

        <HBox spacing="10">
            <Button text="إضافة" onAction="#saveComponent" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button text="إغلاق" onAction="#closePopup" />
        </HBox>

    </VBox>
</AnchorPane>
