<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controllers.AdminRequestsController" spacing="10"
      style="-fx-padding: 15;">

    <Label text="إدارة طلبات الصرف" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="البحث:"/>
        <TextField fx:id="searchField" promptText="ابحث في الطلبات..." prefWidth="200"/>

        <Label text="الحالة:"/>
        <ComboBox fx:id="statusFilterCombo" prefWidth="120"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="refreshButton" text="تحديث" onAction="#onRefreshClicked"/>
    </HBox>

    <TableView fx:id="requestsTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="requestIdColumn" text="رقم الطلب" prefWidth="80"/>
            <!-- إضافة عمود كود العنصر هنا -->
            <TableColumn fx:id="itemCodeColumn" text="كود العنصر" prefWidth="100"/>
            <TableColumn fx:id="itemNameColumn" text="اسم العنصر" prefWidth="150"/>
            <TableColumn fx:id="deviceNameColumn" text="الجهاز" prefWidth="120"/>
            <TableColumn fx:id="serialNumberColumn" text="السيريال" prefWidth="120"/>
            <TableColumn fx:id="quantityColumn" text="الكمية" prefWidth="80"/>
            <TableColumn fx:id="requesterColumn" text="مقدم الطلب" prefWidth="120"/>
            <TableColumn fx:id="requestDateColumn" text="وقت الطلب" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="الحالة" prefWidth="100"/>
            <TableColumn fx:id="reasonColumn" text="السبب" prefWidth="200"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="approveButton" text="موافقة" onAction="#onApproveClicked"
                style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
        <Button fx:id="rejectButton" text="رفض" onAction="#onRejectClicked"
                style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
    </HBox>
</VBox>